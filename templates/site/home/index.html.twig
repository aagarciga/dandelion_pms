{% extends 'site.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('homepage') }}
{% endblock %}

{% block body %}

    <main data-barba="wrapper">
        <aside>
            <button type="button" id="locale-selector">
                {% include 'site/svg/_iconmonstr-globe-8.svg.twig' %}
            </button>
            <nav role="navigation" id="locale-list">
            {% for locale in locales() %}
                <a {% if app.request.locale == locale.code %}class="active" aria-checked="true" {% else %}class="" aria-checked="false"{% endif %} role="menuitem"  href="{{ path(app.request.get('_route', 'home_index'), app.request.get('_route_params', [])|merge({_locale: locale.code})) }}">
                    {{ locale.name|capitalize }} <small>{{ locale.code[0:2] }}</small>
                </a>
            {% endfor %}
            </nav>

            <nav role="navigation" id="socials">
                <a href="https://www.facebook.com/hotelmaretraite/">
                    {% include 'site/svg/_iconmonstr-facebook-6.svg.twig' %}
                </a>
                <a href="https://wa.me/5977614288">
                    {% include 'site/svg/_iconmonstr-whatsapp-1.svg.twig' %}
                </a>
                <a href="https://www.instagram.com/maretraitehotel/">
                    {% include 'site/svg/_iconmonstr-instagram-11.svg.twig' %}
                </a>
            </nav>
        </aside>



